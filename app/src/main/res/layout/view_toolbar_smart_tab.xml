<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/smartTabLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/shape_gradient_primary"
        app:stl_customTabTextLayoutId="@layout/view_toolbar_pager_tag"
        app:stl_customTabTextViewId="@id/textView"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/colorToolbarTabIndicator"
        app:stl_indicatorCornerRadius="15dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="26dp"
        app:stl_underlineThickness="0dp" />
</layout>